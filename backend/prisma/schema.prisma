generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  lastName    String
  username    String
  phoneNumber String
  score       Int
  birthday    DateTime
}

model Calendar {
  id      Int       @id @default(autoincrement())
  date    DateTime
  directs Directs[]
}

model Directs {
  id         Int      @id @default(autoincrement())
  phone      String
  clientName String
  time       String
  comment    String
  calendar   Calendar @relation(fields: [calendarId], references: [id])
  calendarId Int
}
